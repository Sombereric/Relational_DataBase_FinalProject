<Window x:Class="SchoolDataSystem.UI_LAYER.CourseTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Course Table" Height="400" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="dgCourses"
          Grid.Column="0"
          AutoGenerateColumns="True"
          IsReadOnly="True"
          SelectionChanged="dgCourses_SelectionChanged" />

        <StackPanel Grid.Column="1" Margin="10">

            <TextBlock Text="Course ID" />
            <TextBox x:Name="txtCourseID" />

            <TextBlock Text="Section" />
            <TextBox x:Name="txtSection" />

            <TextBlock Text="Course Name" />
            <TextBox x:Name="txtCourseName" />

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                <Button Content="Create" Width="80" Margin="5" Click="btnCreate_Click"/>
                <Button Content="Update" Width="80" Margin="5" Click="btnUpdate_Click"/>
                <Button Content="Delete" Width="80" Margin="5" Click="btnDelete_Click"/>
            </StackPanel>

            <Button Content="Back" Width="80" HorizontalAlignment="Center" Margin="10"
                    Click="btnBack_Click"/>
        </StackPanel>

    </Grid>
</Window>
