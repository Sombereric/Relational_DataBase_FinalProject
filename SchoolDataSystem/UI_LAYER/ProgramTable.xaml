<Window x:Class="SchoolDataSystem.UI_LAYER.ProgramTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Program Table" Height="400" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

      
       <DataGrid x:Name="dgPrograms"
          AutoGenerateColumns="True"
          Grid.Column="0"
          IsReadOnly="True"
          SelectionChanged="dgPrograms_SelectionChanged" />

        
        <StackPanel Grid.Column="1" Margin="10">

            <TextBlock Text="Program ID" />
            <TextBox x:Name="txtProgramID" />

            <TextBlock Text="Program Name" />
            <TextBox x:Name="txtProgramName" />

            <TextBlock Text="Program Type" />
            <TextBox x:Name="txtProgramType" />

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                <Button Content="Create" Width="80" Margin="5" Click="btnCreate_Click"/>
                <Button Content="Update" Width="80" Margin="5" Click="btnUpdate_Click"/>
                <Button Content="Delete" Width="80" Margin="5" Click="btnDelete_Click"/>
            </StackPanel>

            <Button Content="Back" Width="80" HorizontalAlignment="Center" Margin="10"
                    Click="btnBack_Click"/>
        </StackPanel>

    </Grid>
</Window>
