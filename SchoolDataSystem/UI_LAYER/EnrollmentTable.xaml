<Window x:Class="SchoolDataSystem.UI_LAYER.EnrollmentTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enrollment Table"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

       <DataGrid x:Name="dgEnrollments"
          Grid.Column="0"
          AutoGenerateColumns="True"
          Margin="0,0,10,0"
          IsReadOnly="True"
          SelectionChanged="dgEnrollments_SelectionChanged" />


        
        <StackPanel Grid.Column="1" Margin="10">

            <TextBlock Text="Enrollment ID" />
            <TextBox x:Name="txtEnrollmentID" />

            <TextBlock Text="Student ID" Margin="0,10,0,0" />
            <TextBox x:Name="txtStudentID" />

            <TextBlock Text="Course ID" Margin="0,10,0,0" />
            <TextBox x:Name="txtCourseID" />

            <TextBlock Text="Term" Margin="0,10,0,0" />
            <TextBox x:Name="txtTerm" />

            <TextBlock Text="Grade" Margin="0,10,0,0" />
            <TextBox x:Name="txtGrade" />

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                <Button x:Name="btnCreate"
                        Content="Create"
                        Width="80"
                        Margin="5"
                        Click="btnCreate_Click" />
                <Button x:Name="btnUpdate"
                        Content="Update"
                        Width="80"
                        Margin="5"
                        Click="btnUpdate_Click" />
                <Button x:Name="btnDelete"
                        Content="Delete"
                        Width="80"
                        Margin="5"
                        Click="btnDelete_Click" />
            </StackPanel>

            <Button x:Name="btnBack"
                    Content="Back"
                    Width="100"
                    HorizontalAlignment="Center"
                    Margin="10"
                    Click="btnBack_Click" />

        </StackPanel>
    </Grid>
</Window>
